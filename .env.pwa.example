# ============================================
# Configuration PWA - AXONTIS
# ============================================

# PWA Activation (défaut: true en production)
PWA_ENABLED=true

# PWA Notification Types
PWA_SHOW_UPDATE_NOTIFICATION=true
PWA_SHOW_OFFLINE_NOTIFICATION=true
PWA_AUTO_UPDATE=true

# PWA Cache Configuration
PWA_CACHE_STRATEGY=hybrid
# Options: 'network-first', 'cache-first', 'hybrid' (défaut)

# PWA API Cache Duration (en secondes)
PWA_API_CACHE_TTL=3600
# Défaut: 3600 (1 heure)

# PWA Assets Cache Duration (en secondes)
PWA_ASSETS_CACHE_TTL=31536000
# Défaut: 31536000 (1 année)

# PWA Service Worker Check Interval (en millisecondes)
PWA_SW_CHECK_INTERVAL=60000
# Défaut: 60000 (1 minute)

# PWA Offline Mode
PWA_OFFLINE_MODE_ENABLED=true
# Permet le fonctionnement offline

# PWA Installation Prompt
PWA_SHOW_INSTALL_PROMPT=true
# Affiche le prompt d'installation

# PWA Branding
PWA_APP_NAME=AXONTIS
PWA_APP_SHORT_NAME=AXONTIS
PWA_APP_DESCRIPTION="Votre espace de gestion sécurisé AXONTIS"

# PWA Colors
PWA_THEME_COLOR=#1f2937
PWA_BACKGROUND_COLOR=#ffffff

# PWA Display Mode
# Options: 'standalone', 'fullscreen', 'minimal-ui', 'browser'
PWA_DISPLAY_MODE=standalone

# PWA Screenshots
# Ajouter les paths relatifs aux screenshots
PWA_SCREENSHOTS_ENABLED=true

# PWA Shortcuts
PWA_SHORTCUTS_ENABLED=true

# PWA Notifications Push
PWA_PUSH_NOTIFICATIONS_ENABLED=false
# Mettre à true si notifications push activées

# PWA Firebase Cloud Messaging (si applicable)
VITE_FCM_API_KEY=
VITE_FCM_AUTH_DOMAIN=
VITE_FCM_PROJECT_ID=
VITE_FCM_STORAGE_BUCKET=
VITE_FCM_MESSAGING_SENDER_ID=
VITE_FCM_APP_ID=

# PWA Debug Mode (développement uniquement)
PWA_DEBUG=false
# Affiche les logs du Service Worker

# ============================================
# REMARQUES
# ============================================
# - Ces variables sont optionnelles pour le build
# - La configuration PWA est dans vite.config.js
# - Le Service Worker est dans public/sw.js
# - Les icônes doivent être dans public/
# - HTTPS obligatoire en production

